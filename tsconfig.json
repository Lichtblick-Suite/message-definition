{
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "noEmit": true,
    "lib": ["es2020"],
    "rootDir": "./src",

    "newLine": "lf",
    "skipLibCheck": false,
    "allowJs": true,

    // be as strict as possible, but no stricter
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true
  }
}
